<?xml version="1.0"?>
<ruleset name="Ninja Coding Standard">
  <description>Coding standard</description>
  <rule ref="WordPress-Core"></rule>
  <file>wordpress</file>
  <exclude-pattern>*/dist-wp/*</exclude-pattern>
  <exclude-pattern>*/node_modules/*</exclude-pattern>
  <exclude-pattern>*/uploads/*</exclude-pattern>
  <exclude-pattern>*/composer/*</exclude-pattern>
  <exclude-pattern>*/vendor/*</exclude-pattern>
  <exclude-pattern>/wordpress/theme/inc/admin/template-parts/*</exclude-pattern>
</ruleset>
