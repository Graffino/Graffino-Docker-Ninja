{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Git Checkout",
      "command": "git checkout develop",
      "type": "shell"
    },
    {
      "label": "Git Pull",
      "command": "git pull --rebase",
      "type": "shell"
    },
    {
      "label": "Update Yarn",
      "command": "yarn node:install",
      "type": "shell"
    },
    {
      "label": "Update Composer",
      "command": "yarn composer:update",
      "type": "shell"
    },
    {
      "label": "Init",
      "runOptions": {
        "runOn": "folderOpen"
      },
      "dependsOrder": "sequence",
      "dependsOn": [
        "Git Checkout",
        "Git Pull",
        "Update Yarn",
        "Update Composer"
      ]
    }
  ]
}
