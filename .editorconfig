root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.php]
indent_size = 4
indent_style = tab

[*.svg]
insert_final_newline = false

[*.md]
trim_trailing_whitespace = false

[*.yml]
indent_style = space
indent_size = 2

[docker-compose.yml]
indent_style = space
indent_size = 4

[Makefile]
indent_style = tab
indent_size = 4
