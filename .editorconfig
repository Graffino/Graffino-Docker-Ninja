root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.php]
indent_size = 4
indent_style = tab

[*.svg]
insert_final_newline = false

[*.yml]
indent_size = 4
indent_style = space

[Makefile]
indent_size = 4
indent_style = tab
